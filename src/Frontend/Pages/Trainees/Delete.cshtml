@page "{id:int}"
@model Frontend.Pages.Trainees.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h4>Trainee</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        Full Name:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Trainee.FullName)
    </dd>
    <dt class="col-sm-2">
        DateJoined:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Trainee.DateJoined)
    </dd>
    <dt class="col-sm-2">
        Trainer:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Trainee.Trainer.Name)
    </dd>
    <dt class="col-sm-2">
        Training Plan:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Trainee.TrainingPlan.PlanName)
    </dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Trainee.TraineeId" />

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</form>
