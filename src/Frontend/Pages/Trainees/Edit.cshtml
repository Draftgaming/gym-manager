@page
@model Frontend.Pages.Trainees.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Trainee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Trainee.TraineeId" />

            <div class="form-group">
                <label asp-for="Trainee.FullName" class="control-label"></label>
                <input asp-for="Trainee.FullName" class="form-control" />
                <span asp-validation-for="Trainee.FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Trainee.DateJoined" class="control-label"></label>
                <input asp-for="Trainee.DateJoined" type="date" class="form-control" />
                <span asp-validation-for="Trainee.DateJoined" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Trainee.TrainerId" class="control-label"></label>
                <select asp-for="Trainee.TrainerId" asp-items="Model.TrainerOptions" class="form-control">
                    <option value="">— select trainer —</option>
                </select>
                <span asp-validation-for="Trainee.TrainerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Trainee.TrainingPlanId" class="control-label"></label>
                <select asp-for="Trainee.TrainingPlanId" asp-items="Model.PlanOptions" class="form-control">
                    <option value="">— select plan —</option>
                </select>
                <span asp-validation-for="Trainee.TrainingPlanId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
